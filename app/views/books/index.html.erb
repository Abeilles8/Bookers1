<h1 class="title">Books</h1>
<%# 投稿一覧%>
<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |list| %>
    <tr>
      <td><%= list.title %></td>
      <td><%= list.body %></td>

      <td><%= link_to "Show", book_path(list.id)%></td>

    </tr>
    <% end %>
  </tbody>
</table>
<%# 投稿一覧%>

<%# 投稿機能%>
<%= form_for(@book, url: '/books') do |f| %>

  <div>
  <%= f.label :title%>  <%= f.text_field :title %>
  </div>
  <div>
  <%= f.label :body%>   <%= f.text_area :body %>
  </div>

  <div><%= f.submit "Create Book" %></div>
<% end %>
