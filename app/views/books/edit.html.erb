<h1>Editing Book</h1>
<%= form_for(@book, url: "/books/#{@book.id}") do |f| %>
  <div class="field">
  <%= f.label :title%>  <%= f.text_field :title %>
  </div>
  <div class="field">
  <%= f.label :body%>   <%= f.text_area :body %>
  </div>
  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>
  <div>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path%>
  </div>
<% end %>